<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sigmar_one"
                android:text="Create a Trip"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edit_text_trip_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/quary_input"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:hint="Trip Name"
                android:layout_marginEnd="10dp"/>

            <DatePicker
                android:id="@+id/edit_text_trip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_trip_submit_butyyon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#F44336"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"/>

                <Button
                    android:id="@+id/create_trip_submit_butyyon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:layout_marginEnd="20dp"/>

            </RelativeLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>