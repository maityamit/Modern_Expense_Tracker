<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowfreindActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:fontFamily="@font/baloo_tamma"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:textColor="@android:color/black"
        android:background="@drawable/dida"
        android:text="Add your friend to this trip"/>

    <TextView
        android:id="@+id/Freind_Serach_Actvity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:drawableStart="@drawable/search_image"
        android:textStyle="bold"
        android:text="Search System Coming Soon.."
        android:layout_marginEnd="10dp">



    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Show_All_Freinds_Recycler_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>